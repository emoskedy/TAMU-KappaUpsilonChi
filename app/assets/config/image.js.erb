document.addEventListener("DOMContentLoaded", function () {
  const images = [
    "<%= asset_path('homepage/image1.png') %>",
    "<%= asset_path('homepage/image2.png') %>",
    "<%= asset_path('homepage/image3.png') %>"
  ];
  let currentImageIndex = 0;
  const carousel = document.getElementById("carousel");

  function switchImage() {
    currentImageIndex = (currentImageIndex + 1) % images.length;
    carousel.src = images[currentImageIndex];
    carousel.alt = "Image " + (currentImageIndex + 1);
  }

  // Change image every 3 seconds (adjust the interval as needed)
  setInterval(switchImage, 3000);
});