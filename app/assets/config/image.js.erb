document.addEventListener("DOMContentLoaded", function () {
  const images = [
    "<%= asset_path('homepage/a.jpg') %>",
    "<%= asset_path('homepage/b.JPG') %>",
    "<%= asset_path('homepage/c.jpg') %>",
    "<%= asset_path('homepage/d.png') %>",
    "<%= asset_path('homepage/e.JPG') %>",
    "<%= asset_path('homepage/f.jpg') %>",
    "<%= asset_path('homepage/g.jpeg') %>",
    "<%= asset_path('homepage/h.jpg') %>",
    "<%= asset_path('homepage/i.JPG') %>",
    "<%= asset_path('homepage/j.JPG') %>",
    "<%= asset_path('homepage/k.JPG') %>",


  ];
  let currentImageIndex = 0;
  const carousel = document.getElementById("carousel");

  function switchImage() {
    currentImageIndex = (currentImageIndex + 1) % images.length;
    carousel.src = images[currentImageIndex];
    carousel.alt = "Image " + (currentImageIndex + 1);
  }

  // Change image every 3 seconds (adjust the interval as needed)
  setInterval(switchImage, 3000);
});