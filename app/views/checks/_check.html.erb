<div id="<%= dom_id check %>" style="display: block; width: 100%; text-align: center;">
  <div style="display: inline-block; text-align: left;">
    <table border="1" cellpadding="5" style="margin:auto">
        <tr>
        <td colspan="2"><strong>Description:</strong> <%= check.description %></td>
        <td><strong>Date:</strong> <%= check.date %></td>
        </tr>
        <tr>
        <td><strong>Organization Name:</strong> <%= check.organization_name %></td>
        <td><strong>Account Number:</strong> <%= check.account_number %></td>
        <% if check.sub_account.present? %>
            <td><strong>Sub-Account Number:</strong> <%= check.sub_account.sub_account_number %></td>
        <% else %>
            <td></td>
        <% end %>
        </tr>
        <tr>
        <td colspan="3">
            <strong>Payable To:</strong> <%= check.payable_name %>, <%= check.payable_address %>, <%= check.payable_phone_number %>, <%= check.role %>
        </td>
        </tr>
        <tr>
        <td><strong>Payment Method:</strong> <%= check.payment_method %></td>
        <td><strong>Travel:</strong> <%= check.travel %></td>
        <td><strong>Food:</strong> <%= check.food %></td>
        </tr>
        <tr>
        <td><strong>Office Supplies:</strong> <%= check.office_supplies %></td>
        <td><strong>Utilities:</strong> <%= check.utilities %></td>
        <td><strong>Membership:</strong> <%= check.membership %></td>
        </tr>
        <tr>
        <td><strong>Total:</strong> <%= check.dollar_amount %></td>
        <td><strong>Approval Status:</strong> <%= check.approval_status %></td>
        <td><strong>Time Created:</strong> <%= check.created_at.in_time_zone('Central Time (US & Canada)') %></td>
        </tr>
        <tr>
        <td colspan="3"><strong>Officer Comments:</strong> <%= check.comments %></td>
        </tr>
        <tr>
        <td colspan="3"><strong>Created By:</strong> <%= check.admin.full_name %></td>
        </tr>
    </table>
  </div>
</div>