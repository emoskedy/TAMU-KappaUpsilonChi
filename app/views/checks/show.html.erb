<%= stylesheet_link_tag "application" %>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.7/css/all.css"><h1> Show Form </h1>

<p style="color: green"><%= notice %></p>

<%= render @check %>

<div style="text-align: center; margin-top: 20px;">
  <%= link_to "Edit this form", edit_check_path(@check), class: "create-person", style: "margin-right: 20px;"%> 
  <% if @check.pending? %>
    <%= link_to "Back to forms", checks_path, class: "create-person", style: "margin-right: 20px;" %> 
  <% else %>
    <%= link_to "Back to past forms", past_checks_path, class: "create-person", style: "margin-right: 20px;" %> 
  <% end %>
  <%= link_to "Review this form", review_check_path(@check), class: "create-person", style: "margin-right: 20px;"%> 
  <%= link_to "View Notes", check_notes_path(@check), class: "create-person", style: "margin-right: 20px;"%>

  <%= button_to "Destroy this form", @check, method: :delete %>
</div>