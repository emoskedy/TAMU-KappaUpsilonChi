<div id="<%= dom_id sub_account %>" style="display: block; width: 100%; text-align: center;">
    <div style="display: inline-block; text-align: left;">
        <%= form_with(model: sub_account) do |form| %>
            <% if sub_account.errors.any? %>
            <div style="color: red">
                <h2><%= pluralize(sub_account.errors.count, "error") %> prohibited this form from being saved:</h2>
        
                <ul>
                <% sub_account.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
                </ul>
            </div>
            <% end %>
        
            <table border="1" cellpadding="5" style="width: 100%; height: 100%;">
            <tr>
                <td colspan="2">
                <strong><%= form.label :sub_account_number %></strong>
                <%= form.number_field :sub_account_number %>
                </td>
                <td colspan="1">
                <strong><%= form.label :owner_name %></strong>
                <%= form.text_field :owner_name %>
                </td>
            </tr>
            </table>
        
            <div style="text-align: center; margin-top: 20px;">
            <%= form.submit %>
            </div>
        <% end %>
    </div>
</div>
        