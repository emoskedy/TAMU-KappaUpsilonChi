<%= stylesheet_link_tag "application" %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" crossorigin="anonymous">

<ul>
  <li class="icon-container">
    <%= image_tag("logos/KYXCrest.png", class: "icon-image", alt: "KYX Crest") %>
  </li>
</ul>

<div class="login-container">
  <div class="login-section">
      <div class="user-icon-container">
        <i class="fas fa-user-circle user-icon"></i>
      </div>
      <div class="text-container">
        <h3>Sign In</h3>
      </div>
      <div class="btn-container">
        <%= button_to admin_google_oauth2_omniauth_authorize_path, class: "btn btn-danger btn-wide", method: :post, data: { turbo: "false" } do %>
            <i class="fab fa-google login"></i><span class="login">&nbsp;Sign in with Google</span>
        <% end %>
      </div>
  </div>
  <div class="picture-section">
    <%= image_tag("homepage/image1.png", id: "carousel", alt: "Image 1") %>
  </div>
</div>
<%= javascript_include_tag "image" %>
