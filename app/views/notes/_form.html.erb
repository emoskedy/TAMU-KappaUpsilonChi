<%= form_with(model: [@check, @note], url: check_notes_path(@check), html: { class: "directUpload", data: { 'form-data' => (@s3_direct_post.fields), 'url' => @s3_direct_post.url, 'host' => URI.parse(@s3_direct_post.url).host } }) do |form| %>
  <% if note.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :form_id, value: @check.id %>

  <div class="field">
    <%= form.label :picture, style: "display: block" %>
    <%= form.file_field :picture %>
  </div>
  
  <div>
    <%= form.submit %>
  </div>
<% end %>
